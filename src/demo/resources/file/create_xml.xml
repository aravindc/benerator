<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE setup SYSTEM "http://databene.org/benerator-0.3.dtd">
<setup>
    <create-entities name="transaction" count="10">
        <variable name="product" source="shop/products.import.csv" distribution="random"/>
        <attribute name="id" type="long" min="1" max="1000000000" distribution="step"/>
        <attribute name="ean_code" source="product.ean_code"/>
        <attribute name="price" source="product.price"/>
        <attribute name="items" type="short" min="1" max="27"/>
        <processor class="org.databene.platform.script.ScriptedEntityExporter">
            <property name="uri" value="transactions.xml"/>
            <property name="headerScript" value="shop/transaction_xml_header.ftl"/>
            <property name="partScript" value="shop/transaction_xml_part.ftl"/>
            <property name="footerScript" value="shop/transaction_xml_footer.ftl"/>
        </processor>
    </create-entities>
</setup>