<?xml version="1.0" encoding="iso-8859-1"?>
<setup	xmlns="http://databene.org/benerator/0.6.0"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://databene.org/benerator/0.6.0 http://databene.org/benerator-0.6.0.xsd">
		
	<import defaults="true" 
			platforms="xml"/>
	
	<bean class="XMLSchemaDescriptorProvider" id="schema"> <!-- TODO use 'include' -->
		<property name="schemaUri" value="demo/shop/shop-plain.xsd" />
	</bean>
	
	<bean id="cons" spec="new XMLEntityExporter('test.xml')" />
	
	<generate type="shop" count="1" consumer="cons">
		<generate type="product" count="5" consumer="cons" />
	</generate>
	
</setup>