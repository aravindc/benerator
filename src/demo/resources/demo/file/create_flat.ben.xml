<?xml version="1.0" encoding="iso-8859-1"?>
<setup	xmlns="http://databene.org/benerator/0.5.8"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://databene.org/benerator/0.5.8 http://databene.org/benerator-0.5.8.xsd">
    <create-entities name="transaction" count="100">
        <variable name="product" type="entity" source="demo/file/products.import.csv" distribution="random"/> <!--cyclic="true"
                  proxy="skip" proxy-param1="1" proxy-param2="2"/-->
        <attribute name="id" type="long" min="1" max="1000000000" distribution="step"/>
        <attribute name="ean_code" script="{${product.ean_code}}"/>
        <attribute name="price" script="{${product.price}}"/>
        <attribute name="items" type="short" min="1" max="27"/>
        <attribute name="date" type="date"/>
        <consumer class="org.databene.platform.flat.FlatFileEntityExporter">
            <property name="uri" value="transactions.flat"/>
            <property name="columns" value="id[8r0],ean_code[13],price[8r0],items[4r0],date[8]"/>
            <property name="datePattern" value="yyyyMMdd"/>
        </consumer>
    </create-entities>
</setup>