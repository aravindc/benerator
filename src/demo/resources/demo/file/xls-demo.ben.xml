<?xml version="1.0" encoding="iso-8859-1"?>

<!-- This demonstrates how to create an Excel Sheet using the XLSEntityExporter -->
<!-- author: Volker Bergmann -->

<setup  xmlns="http://databene.org/benerator/0.5.7"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://databene.org/benerator/0.5.7 http://databene.org/benerator-0.5.7.xsd">

    <import defaults="true"/>

    <create-entities name="transaction" count="100" 
            consumer="XLSEntityExporter[uri='transactions.xls', properties='id,items,name,comment']">
        <attribute name="id" type="long" min="1" max="1000000000" distribution="step"/>
        <attribute name="items" type="short" min="1" max="27"/>
        <attribute name="name" pattern="[A-Z][a-z]{5,12}"/>
        <attribute name="comment" pattern="[A-Z][a-z]{5,64}"/>
    </create-entities>

</setup>