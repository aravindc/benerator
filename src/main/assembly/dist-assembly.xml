<assembly>
    <id>dist</id>
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <fileSets>
        <!-- license files and release notes -->
        <fileSet>
            <directory></directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>license.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>/</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>releasenotes*.txt</include>
            </includes>
        </fileSet>
        <!-- script files -->
        <fileSet>
            <directory>src/main/script</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
            <excludes>
                <exclude>benerator_common.bat</exclude>
                <exclude>benerator_common.sh</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>log4j.xml</include>
            </includes>
        </fileSet>
        <!-- main -->
        <fileSet>
            <directory>src/main/java</directory>
            <outputDirectory>src</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>src</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>*.bat</include>
                <include>*.sh</include>
            </includes>
        </fileSet>
        <!-- tests -->
        <fileSet>
            <directory>src/test/java</directory>
            <outputDirectory>test</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/test/resources</directory>
            <outputDirectory>test</outputDirectory>
        </fileSet>
        <!-- demo -->
        <fileSet>
            <directory>src/demo/java</directory>
            <outputDirectory>demo</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/demo/resources</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <!-- doc -->
        <fileSet>
            <directory>target/site/apidocs</directory>
            <outputDirectory>doc/api</outputDirectory>
        </fileSet>
	    <fileSet>
			<directory>target</directory>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
			<excludes>
				<exclude>*-sources.jar</exclude>
			</excludes>
	    </fileSet>
    </fileSets>

	<!-- filtered script files -->
    <files>
		<file>
			<source>src/main/script/benerator_common.bat</source>
			<outputDirectory>bin</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>src/main/script/benerator_common.sh</source>
			<outputDirectory>bin</outputDirectory>
			<filtered>true</filtered>
		</file>
    </files>

    <dependencySets>
        <dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <unpack>false</unpack>
            <scope>provided</scope>
            <includes>
                <include>org.slf4j:slf4j-log4j12:jar</include>
                <include>log4j:log4j:jar</include>
            </includes>
        </dependencySet>
        <dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <unpack>false</unpack>
            <excludes>
                <exclude>antlr:antlr:jar</exclude>
                <exclude>org.antlr:stringtemplate:jar</exclude>
                <exclude>avalon-framework:avalon-framework:jar</exclude>
                <exclude>commons-logging:commons-logging:jar</exclude>
                <exclude>log4j:log4j:jar</exclude>
                <exclude>logkit:logkit:jar</exclude>
                <exclude>javax.servlet:servlet-api:jar</exclude>
                <exclude>junit:junit:jar</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
    
</assembly>