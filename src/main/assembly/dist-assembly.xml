<assembly>
    <id>dist</id>
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <fileSets>
        <!-- license files and release notes -->
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>license.txt</include>
                <include>gpl.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>/</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>releasenotes*.txt</include>
            </includes>
        </fileSet>
        <!-- script files -->
        <fileSet>
            <directory>src/main/script</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
            <excludes>
                <exclude>benerator_common.bat</exclude>
                <exclude>benerator_common</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>log4j.xml</include>
            </includes>
        </fileSet>
        <!-- main -->
        <fileSet>
            <directory>src/main/java</directory>
            <outputDirectory>src</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>src</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>*.bat</include>
            </includes>
        </fileSet>
        <!-- tests -->
        <fileSet>
            <directory>src/test/java</directory>
            <outputDirectory>test</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/test/resources</directory>
            <outputDirectory>test</outputDirectory>
        </fileSet>
        <!-- demo -->
        <fileSet>
            <directory>src/demo/java</directory>
            <outputDirectory>demo</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/demo/resources</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <!-- doc -->
        <fileSet>
            <directory>target/site/apidocs</directory>
            <outputDirectory>doc/api</outputDirectory>
        </fileSet>
    </fileSets>

	<!-- filtered script files -->
    <files>
		<file>
			<source>src/main/script/benerator_common.bat</source>
			<outputDirectory>bin</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>src/main/script/benerator_common</source>
			<outputDirectory>bin</outputDirectory>
			<filtered>true</filtered>
		</file>
    </files>

    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <excludes>
                <exclude>junit:junit</exclude>
                <exclude>databene:databene-benerator</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <includes>
                <include>databene:databene-benerator</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>