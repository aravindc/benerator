    <modelVersion>4.0.0</modelVersion>

    <groupId>org.databene</groupId>
    <artifactId>databene-benerator</artifactId>
    <version>0.5.2</version>

    <properties>
	    <webdecs_version>0.4.2</webdecs_version>
	    <commons_version>0.4.2</commons_version>
    </properties>

